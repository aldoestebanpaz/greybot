split_str() { local sep=$1 str=$2; split=(); while [[ $str = *"$sep"* ]]; do split+=("${str%%"$sep"*}"); str=${str#*"$sep"}; done; split+=("$str"); } # usage: split_str SEP STRING # splits STRING on the literal string SEP, populating the array "split". try: s='foo - bar - baz blah - quux'; split ' - ' "$s"; printf '%s\n' "${split[@]}"
